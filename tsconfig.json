{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "target": "ES2019",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "strict": false,
    "noEmitOnError": true,
    "declaration": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*"
  ],
  "lib": [
    "es2017"
  ]
}